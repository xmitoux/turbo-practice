{
  "name": "turbo-practice",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "dotenv -- turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "backend": "pnpm -F \"backend\"",
    "frontend": "pnpm -F \"frontend\"",
    "db": "pnpm -F \"database\"",
    "render:deploy": "pnpm install --frozen-lockfile && pnpm -F database db:deploy; pnpm turbo build"
  },
  "devDependencies": {
    "@repo/lint": "workspace:*",
    "dotenv-cli": "^7.4.2",
    "turbo": "latest"
  }
}
